<Window x:Class="DNSChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DNSChanger.ViewModels"
        xmlns:conv="clr-namespace:DNSChanger.Converters"
        xmlns:views="clr-namespace:DNSChanger.Views"
        mc:Ignorable="d"
        Title="DNS Changer" 
        Height="700" 
        Width="1200"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <conv:OpacityConverter x:Key="OpacityConverter"/>
        <conv:LatencyColorConverter x:Key="LatencyColorConverter"/>
        <conv:TestButtonTextConverter x:Key="TestButtonTextConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundMediumBrush}" 
                Padding="20,16"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="DNS Changer" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}" 
                              Foreground="{StaticResource ForegroundSecondaryBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    <Button Content="Refresh Networks" 
                           Command="{Binding RefreshNetworksCommand}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Networks -->
            <Border Grid.Column="0" 
                   Background="{StaticResource BackgroundLightBrush}"
                   BorderBrush="{StaticResource BorderBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="16"
                   Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Network Adapters" 
                              Style="{StaticResource HeaderText}"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding Networks}"
                                SelectedItem="{Binding SelectedNetwork}"
                                Style="{StaticResource ModernListBox}"
                                BorderThickness="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItem}"/>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="8">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                        <TextBlock Text="{Binding Type}" 
                                                  FontSize="12"
                                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                  Opacity="0.7"
                                                  Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding IpAddress}" 
                                                  FontSize="11"
                                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                  Opacity="0.6"
                                                  Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding DnsPrimary}" 
                                                  FontSize="11"
                                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                  Opacity="0.6"
                                                  Margin="0,2,0,0"/>
                                        <Border Background="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}" 
                                               CornerRadius="10"
                                               Padding="6,2"
                                               HorizontalAlignment="Left"
                                               Margin="0,4,0,0">
                                            <TextBlock Text="{Binding StatusBadge}" 
                                                      FontSize="10"
                                                      Foreground="White"
                                                      FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Right Panel - DNS Table -->
            <Border Grid.Column="1" 
                   Background="{StaticResource BackgroundLightBrush}"
                   BorderBrush="{StaticResource BorderBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                      Text="DNS Servers" 
                                      Style="{StaticResource HeaderText}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}"
                                       Width="200"
                                       Height="30"
                                       Padding="8,4"
                                       Background="{StaticResource BackgroundMediumBrush}"
                                       Foreground="{StaticResource ForegroundPrimaryBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Margin="0,0,8,0">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="4"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <Button Content="➕ Add" 
                                       Command="{Binding AddCustomDnsCommand}"
                                       Style="{StaticResource ModernButton}"
                                       Width="80"
                                       Height="30"
                                       Padding="8,4"/>
                            </StackPanel>
                        </Grid>
                        <!-- Category Filter Buttons -->
                        <StackPanel Grid.Row="1" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,12">
                            <Button Content="All" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="All"
                                   Style="{StaticResource ModernButton}"
                                   Width="70"
                                   Height="28"
                                   Padding="8,4"
                                   Margin="0,0,8,0"/>
                            <Button Content="Public" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="Public"
                                   Style="{StaticResource ModernButton}"
                                   Width="70"
                                   Height="28"
                                   Padding="8,4"
                                   Margin="0,0,8,0"/>
                            <Button Content="Privacy" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="Privacy"
                                   Style="{StaticResource ModernButton}"
                                   Width="70"
                                   Height="28"
                                   Padding="8,4"
                                   Margin="0,0,8,0"/>
                            <Button Content="Family" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="Family"
                                   Style="{StaticResource ModernButton}"
                                   Width="70"
                                   Height="28"
                                   Padding="8,4"
                                   Margin="0,0,8,0"/>
                            <Button Content="Custom" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="Custom"
                                   Style="{StaticResource ModernButton}"
                                   Width="70"
                                   Height="28"
                                   Padding="8,4"
                                   Margin="0,0,8,0"/>
                            <Button Content="⭐ Favorites" 
                                   Command="{Binding FilterCategoryCommand}"
                                   CommandParameter="Favorites"
                                   Style="{StaticResource ModernButton}"
                                   Width="90"
                                   Height="28"
                                   Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1"
                                 Value="{Binding TestProgress}"
                                 Maximum="100"
                                 Style="{StaticResource ModernProgressBar}"
                                 Visibility="{Binding IsTesting, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Margin="0,0,0,12"/>
                    
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <DataGrid ItemsSource="{Binding DnsServers}"
                                 SelectedItem="{Binding SelectedDns}"
                                 Style="{StaticResource ModernDataGrid}"
                                 SelectionMode="Single"
                                 SelectionChanged="DataGrid_SelectionChanged"
                                 BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Provider" 
                                                   Binding="{Binding Provider}" 
                                                   Width="150"/>
                                <DataGridTextColumn Header="Primary DNS" 
                                                   Binding="{Binding Primary}" 
                                                   Width="140"/>
                                <DataGridTextColumn Header="Secondary DNS" 
                                                   Binding="{Binding Secondary}" 
                                                   Width="140"/>
                                <DataGridTextColumn Header="Latency" 
                                                   Binding="{Binding LatencyDisplay}" 
                                                   Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{Binding AvgLatencyMs, Converter={StaticResource LatencyColorConverter}}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Packet Loss" 
                                                   Binding="{Binding PacketLossDisplay}" 
                                                   Width="100"/>
                                <DataGridTextColumn Header="Stability" 
                                                   Binding="{Binding StabilityDisplay}" 
                                                   Width="100"/>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy DNS" 
                                             Command="{Binding CopyDnsCommand}"/>
                                    <MenuItem Header="Resolve Domain..." 
                                             Command="{Binding ResolveDomainCommand}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Bottom Action Bar -->
        <Border Grid.Row="2" 
               Background="{StaticResource BackgroundMediumBrush}"
               BorderBrush="{StaticResource BorderBrush}"
               BorderThickness="0,1,0,0"
               Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: DNS Resolver -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Resolve:" 
                              Foreground="{StaticResource ForegroundSecondaryBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <TextBox Text="{Binding ResolveDomain, UpdateSourceTrigger=PropertyChanged}"
                           Width="200"
                           Height="30"
                           Padding="8,4"
                           Background="{StaticResource BackgroundLightBrush}"
                           Foreground="{StaticResource ForegroundPrimaryBrush}"
                           BorderBrush="{StaticResource BorderBrush}"
                           BorderThickness="1"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           FontSize="12"/>
                    <Button Content="Resolve" 
                           Command="{Binding ResolveDomainCommand}"
                           Style="{StaticResource ModernButton}"
                           Width="80"
                           Height="30"
                           Padding="8,4"/>
                </StackPanel>
                
                <!-- Right: Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Flush Cache" 
                           Command="{Binding FlushDnsCacheCommand}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,8,0"
                           Width="100"/>
                    <Button Content="{Binding IsTesting, Converter={StaticResource TestButtonTextConverter}}" 
                           Command="{Binding RunSpeedTestCommand}"
                           CommandParameter="{Binding IsTesting}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,8,0"
                           Width="140"/>
                    <Button Content="Cancel" 
                           Command="{Binding CancelSpeedTestCommand}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,8,0"
                           Width="80"
                           Visibility="{Binding IsTesting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="Apply DNS" 
                           Command="{Binding ApplyDnsCommand}"
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,8,0"
                           Width="120"/>
                    <Button Content="Restore Default" 
                           Command="{Binding RestoreDefaultCommand}"
                           Style="{StaticResource ModernButton}"
                           Width="140"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
