<Window x:Class="DNSChanger.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="600" 
        Width="700"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                  Text="Settings" 
                  FontSize="24" 
                  FontWeight="Bold"
                  Foreground="{StaticResource ForegroundPrimaryBrush}"
                  Margin="0,0,0,20"/>
        
        <TabControl Grid.Row="1" 
                   Background="{StaticResource BackgroundLightBrush}"
                   BorderBrush="{StaticResource BorderBrush}">
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <CheckBox x:Name="AutoStartCheckBox"
                                 Content="Start with Windows"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"
                                 Margin="0,0,0,20"/>
                        <CheckBox x:Name="MinimizeToTrayCheckBox"
                                 Content="Minimize to system tray"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"
                                 Margin="0,0,0,20"/>
                        <CheckBox x:Name="CheckForUpdatesCheckBox"
                                 Content="Check for updates automatically"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"
                                 Margin="0,0,0,20"/>
                        <CheckBox x:Name="EnableNotificationsCheckBox"
                                 Content="Enable notifications"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"
                                 Margin="0,0,0,20"/>
                        <CheckBox x:Name="RememberWindowPositionCheckBox"
                                 Content="Remember window position"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Speed Test Tab -->
            <TabItem Header="Speed Test">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                     Text="Tests per server:"
                                     Foreground="{StaticResource ForegroundPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                   x:Name="TestCountTextBox"
                                   Width="80"
                                   Background="{StaticResource BackgroundMediumBrush}"
                                   Foreground="{StaticResource ForegroundPrimaryBrush}"
                                   BorderBrush="{StaticResource BorderBrush}"
                                   Padding="8"/>
                        </Grid>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                     Text="Timeout (ms):"
                                     Foreground="{StaticResource ForegroundPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                   x:Name="TimeoutTextBox"
                                   Width="80"
                                   Background="{StaticResource BackgroundMediumBrush}"
                                   Foreground="{StaticResource ForegroundPrimaryBrush}"
                                   BorderBrush="{StaticResource BorderBrush}"
                                   Padding="8"/>
                        </Grid>
                        <CheckBox x:Name="AutoTestOnStartupCheckBox"
                                 Content="Auto-test DNS servers on startup"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Appearance Tab -->
            <TabItem Header="Appearance">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                     Text="Theme:"
                                     Foreground="{StaticResource ForegroundPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                    x:Name="ThemeComboBox"
                                    Width="150"
                                    Background="{StaticResource BackgroundMediumBrush}"
                                    Foreground="{StaticResource ForegroundPrimaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}">
                                <ComboBoxItem Content="Dark" IsSelected="True"/>
                                <ComboBoxItem Content="Light"/>
                            </ComboBox>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                     Text="Font Size:"
                                     Foreground="{StaticResource ForegroundPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                   x:Name="FontSizeTextBox"
                                   Width="80"
                                   Background="{StaticResource BackgroundMediumBrush}"
                                   Foreground="{StaticResource ForegroundPrimaryBrush}"
                                   BorderBrush="{StaticResource BorderBrush}"
                                   Padding="8"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Advanced Tab -->
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                     Text="Log Level:"
                                     Foreground="{StaticResource ForegroundPrimaryBrush}"
                                     VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                    x:Name="LogLevelComboBox"
                                    Width="150"
                                    Background="{StaticResource BackgroundMediumBrush}"
                                    Foreground="{StaticResource ForegroundPrimaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}">
                                <ComboBoxItem Content="Debug"/>
                                <ComboBoxItem Content="Info" IsSelected="True"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Error"/>
                            </ComboBox>
                        </Grid>
                        <TextBlock Text="Log File Location:"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 Margin="0,0,0,8"/>
                        <TextBox x:Name="LogFileTextBox"
                               Background="{StaticResource BackgroundMediumBrush}"
                               Foreground="{StaticResource ForegroundPrimaryBrush}"
                               BorderBrush="{StaticResource BorderBrush}"
                               Padding="8"
                               IsReadOnly="True"
                               Margin="0,0,0,20"/>
                        <CheckBox x:Name="EnableQueryLoggingCheckBox"
                                 Content="Enable DNS query logging (privacy concern)"
                                 Foreground="{StaticResource ForegroundPrimaryBrush}"
                                 FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Cancel" 
                   Click="CancelButton_Click"
                   Style="{StaticResource ModernButton}"
                   Width="100"
                   Margin="0,0,12,0"/>
            <Button Content="Save" 
                   Click="SaveButton_Click"
                   Style="{StaticResource ModernButton}"
                   Width="100"/>
        </StackPanel>
    </Grid>
</Window>
