<Window x:Class="DNSChanger.Views.AddCustomDnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom DNS Server" 
        Height="400" 
        Width="500"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                  Text="Add Custom DNS Server" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Foreground="{StaticResource ForegroundPrimaryBrush}"
                  Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                          Text="Provider Name *" 
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" 
                        x:Name="ProviderTextBox"
                        Background="{StaticResource BackgroundLightBrush}"
                        Foreground="{StaticResource ForegroundPrimaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Padding="8"
                        FontSize="14"/>
            </Grid>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                          Text="Primary DNS *" 
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" 
                        x:Name="PrimaryDnsTextBox"
                        Background="{StaticResource BackgroundLightBrush}"
                        Foreground="{StaticResource ForegroundPrimaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Padding="8"
                        FontSize="14"/>
            </Grid>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                          Text="Secondary DNS (Optional)" 
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" 
                        x:Name="SecondaryDnsTextBox"
                        Background="{StaticResource BackgroundLightBrush}"
                        Foreground="{StaticResource ForegroundPrimaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Padding="8"
                        FontSize="14"/>
            </Grid>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                          Text="Category" 
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          Margin="0,0,0,8"/>
                <ComboBox Grid.Row="1" 
                         x:Name="CategoryComboBox"
                         Background="{StaticResource BackgroundLightBrush}"
                         Foreground="{StaticResource ForegroundPrimaryBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         BorderThickness="1"
                         Padding="8"
                         FontSize="14">
                    <ComboBoxItem Content="Custom" IsSelected="True"/>
                    <ComboBoxItem Content="Public"/>
                    <ComboBoxItem Content="Privacy"/>
                    <ComboBoxItem Content="Family"/>
                </ComboBox>
            </Grid>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                          Text="Description (Optional)" 
                          Foreground="{StaticResource ForegroundPrimaryBrush}"
                          Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" 
                        x:Name="DescriptionTextBox"
                        Background="{StaticResource BackgroundLightBrush}"
                        Foreground="{StaticResource ForegroundPrimaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Padding="8"
                        FontSize="14"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Height="60"
                        VerticalScrollBarVisibility="Auto"/>
            </Grid>
            
            <TextBlock x:Name="ErrorMessageTextBlock"
                      Foreground="{StaticResource ErrorRedBrush}"
                      FontSize="12"
                      TextWrapping="Wrap"
                      Visibility="Collapsed"
                      Margin="0,8,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Cancel" 
                   Click="CancelButton_Click"
                   Style="{StaticResource ModernButton}"
                   Width="100"
                   Margin="0,0,12,0"/>
            <Button Content="Add" 
                   Click="AddButton_Click"
                   Style="{StaticResource ModernButton}"
                   Width="100"/>
        </StackPanel>
    </Grid>
</Window>
